---
import { Image } from 'astro:assets';
import ArrowRightButton from './ArrowRightButton';

interface Props {
	imgMetadata: ImageMetadata;
	link: string;
	title: string;
	description: string;
}

const { imgMetadata, link, title, description } = Astro.props;
---

<div class='flex flex-col w-[230px]'>
	<Image
		src={imgMetadata}
		width={230}
		height={203}
		alt='pink elephant with pg analyze logo'
		class='mb-4'
	/>
	<div class='flex flex-row justify-between'>
		<div
			class='flex text-center text-white font-bold tracking-[0.47px] text-[20px]'
		>
			{title}
		</div>
		<ArrowRightButton link={link} />
	</div>
	<p class='text-lightGrey font-normal font-secondary text-sm mb-12'>
		{description}
	</p>
</div>
